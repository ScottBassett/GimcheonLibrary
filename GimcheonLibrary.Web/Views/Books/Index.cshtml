@model IEnumerable<GimcheonLibrary.DataAccess.Models.Book>
@{
    ViewData["Title"] = "Index";
}

<h1>Books</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Add Book</a>
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(book => book.Title)
        </th>
        <th>
            @Html.DisplayNameFor(book => book.Author)
        </th>
        <th>
            @Html.DisplayNameFor(book => book.AvailableCopies)
        </th>
        <th>
            @Html.DisplayNameFor(book => book.TotalCopies)
        </th>
        <th></th>
    </tr>

    @foreach (var book in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => book.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => book.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => book.AvailableCopies)
            </td>
            <td>
                @Html.DisplayFor(modelItem => book.TotalCopies)
            </td>
            <td>
                <a  asp-action="Edit" asp-route-id="@book.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@book.Id" onclick="return confirm('Are sure wants to delete?');">Delete</a>
            </td>
        </tr>
    }
</table>